<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home | Bitwise</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="/css/user/header.css">
    <link rel="stylesheet" type="text/css" href="/css/user/home.css">
    <link rel="stylesheet" type="text/css" href="/css/user/footer.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">



    
</head>
<body>
    <!-- Header -->
    <%- include('./partials/header') %>

    <section class="catchy-title">
        <h1>Explore the best laptops for every need</h1>
    </section>

    <!-- Hero Section with Slideshow -->
    <section class="hero-section">
        <div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active" style="background-image: url('images/hero-image-1.jpg');">
                    <div class="hero-content">
                        <h1>Welcome to Bitwise</h1>
                        <p>Your ultimate destination for premium laptops</p>
                        <a href="/products/shop" class="btn-shop-now">Shop Now</a>
                    </div>
                </div>
                <div class="carousel-item" style="background-image: url('https://images.unsplash.com/photo-1491472253230-a044054ca35f?q=80&w=2072&auto=format&fit=crop');">
                    <div class="hero-content">
                        <h1>New Arrivals</h1>
                        <p>Explore the latest laptops for work and play</p>
                        <a href="/products/shop" class="btn-shop-now">Explore Now</a>
                    </div>
                </div>
                <div class="carousel-item" style="background-image: url('images/hero-image-2.jpg');">
                    <div class="hero-content">
                        <h1>Best Sellers</h1>
                        <p>Discover our top-rated laptops</p>
                        <a href="/products/shop" class="btn-shop-now">See More</a>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </section>

    <!-- New Arrivals Section -->
    <section class="new-arrivals container">
        <h2 class="section-title">New Arrivals</h2>
        <% if (newArrivals.length > 0) { %>
            <div class="row">
                <% newArrivals.forEach(product => { %>
                    <div class="col-md-3 col-sm-6">
                        <div class="product-card">
                            <% if (product.stock === 0) { %>
                                <span class="badge bg-danger text-white position-absolute top-0 end-0 m-2 badge-sold-out">Sold Out</span>
                            <% } %>
                            <img src="/uploads/<%= product.images[0] %>" alt="<%= product.name %>" class="product-image" loading="lazy">
                            <div class="product-details">
                                <h5><%= product.name %></h5>
                                <p>₹<%= product.price.toFixed(2) %></p>
                                <a href="/products/product-detail/<%= product._id %>" class="btn-view">View</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-center">No new laptops available at the moment.</p>
        <% } %>
    </section>

    <!-- Best Sellers Section -->
    <section class="best-sellers container">
        <h2 class="section-title">Best Sellers</h2>
        <% if (bestSellers.length > 0) { %>
            <div class="row">
                <% bestSellers.forEach(product => { %>
                    <div class="col-md-3 col-sm-6">
                        <div class="product-card">
                            <% if (product.stock === 0) { %>
                                <span class="badge bg-danger text-white position-absolute top-0 end-0 m-2 badge-sold-out">Sold Out</span>
                            <% } %>
                            <img src="/uploads/<%= product.images[0] %>" alt="<%= product.name %>" class="product-image" loading="lazy">
                            <div class="product-details">
                                <h5><%= product.name %></h5>
                                <p>₹<%= product.price.toFixed(2) %></p>
                                <a href="/products/product-detail/<%= product._id %>" class="btn-view">View</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-center">No best-selling laptops available at the moment.</p>
        <% } %>
    </section>

<!-- Footer -->
<%- include('./partials/footer') %>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>