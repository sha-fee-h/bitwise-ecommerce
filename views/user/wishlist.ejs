    <style>
        .container {
    max-width: 900px;
    margin: auto;
    padding: 25px;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    border-radius: 15px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease-in-out;
}

h2 {
    text-align: center;
    color: #1f2937;
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 20px;
}

/* Wishlist Items */
.wishlist-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: #f9fafb;
    padding: 20px;
    border-radius: 12px;
    margin-bottom: 15px;
    transition: transform 0.2s ease-in-out;
}

.wishlist-item:hover {
    transform: scale(1.02);
}

/* Product Image */
.wishlist-image {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 10px;
    border: 2px solid #e5e7eb;
    transition: all 0.3s ease-in-out;
}

.wishlist-image:hover {
    transform: scale(1.05);
    border-color: #2563eb;
}

/* Item Details */
.item-details p {
    margin: 0;
    font-size: 16px;
    color: #374151;
    font-weight: 500;
}

.item-details p strong {
    font-size: 18px;
    color: #1f2937;
}

/* Buttons */
.action-buttons {
    display: flex;
    gap: 12px;
}

/* Add to Cart Button */
.add-to-cart-btn {
    background: #2563eb;
    color: white;
    border: none;
    padding: 7px 12px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 14px;
    font-weight: bold;
    transition: all 0.2s ease-in-out;
}

.add-to-cart-btn:hover {
    background: #1d4ed8;
    transform: scale(1.05);
}

/* Remove from Wishlist Button */
.remove-wishlist-btn {
    background: #dc2626;
    color: white;
    padding: 7px 12px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 14px;
    font-weight: bold;
    transition: all 0.2s ease-in-out;
}

.remove-wishlist-btn:hover {
    background: #b91c1c;
    transform: scale(1.05);
}

/* Empty Wishlist Message */
.empty-wishlist {
    text-align: center;
    font-size: 18px;
    color: #6b7280;
    padding: 30px;
    font-weight: 500;
}

/* Responsive Design */
@media (max-width: 768px) {
    .wishlist-item {
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .action-buttons {
        margin-top: 10px;
    }

    .wishlist-image {
        width: 70px;
        height: 70px;
    }
}

